  <name translate="no">rusttimetrack</name>
  <summary>Track your time without being tracked</summary>
  <developer_name translate="no">Ricky Kresslein</developer_name>
  <developer id="in.kressle">
    <name translate="no">Ricky Kresslein</name>
  </developer>
